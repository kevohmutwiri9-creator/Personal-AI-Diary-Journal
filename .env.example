# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development

# Security - IMPORTANT: Generate a strong secret key for production
# You can generate one using: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your-secret-key-here

# Database
# For SQLite (default): sqlite:///diary.db
# For PostgreSQL: postgresql://username:password@localhost/diary_db
# For MySQL: mysql://username:password@localhost/diary_db
DATABASE_URL=sqlite:///diary.db

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=False
